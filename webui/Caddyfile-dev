0.0.0.0:80
on startup npm run-script start &

header / {
  # Enable cross-site filter (XSS) and tell browser to block detected attacks
  X-XSS-Protection "1; mode=block"
  # Prevent some browsers from MIME-sniffing a response away from the declared Content-Type
  X-Content-Type-Options "nosniff"
  # Disallow the site to be rendered within a frame (clickjacking protection)
  X-Frame-Options "sameorigin"
  # CSP
  Content-Security-Policy "default-src 'self' https://www.iubenda.com/; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.iubenda.com; img-src 'self' data: www.gravatar.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.iubenda.com;  font-src 'self' https://fonts.gstatic.com data: ;"
  Feature-Policy "autoplay 'none'; camera 'none'; microphone 'none'; midi 'none'; usb 'none'; vr 'none';"
  Referrer-Policy "strict-origin"
}

cors /swagger http://localhost:3002

proxy /unleash unleash:4242 {
  without /unleash
  transparent
}

proxy / localhost:2015 {
  transparent
  websocket
}

proxy /auth keycloak:8080 {
  transparent
}

proxy /api api:8180 {
  without /api
  transparent
}

proxy /rpc api:8180 {
  transparent
}

proxy /api/onboarding havenapi:3000 {
  transparent
}

proxy /api/reports havenapi:3000 {
  transparent
}

proxy /api/registration_funnel havenapi:3000 {
  transparent
}

proxy /api/surveys havenapi:3000 {
  transparent
}

log / stdout "{combined}"
errors stdout
