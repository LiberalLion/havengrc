0.0.0.0:2016 
on startup npm run-script start &

header / {
  # Enable cross-site filter (XSS) and tell browser to block detected attacks
  X-XSS-Protection "1; mode=block"
  # Prevent some browsers from MIME-sniffing a response away from the declared Content-Type
  X-Content-Type-Options "nosniff"
  # Disallow the site to be rendered within a frame (clickjacking protection)
  X-Frame-Options "sameorigin"
  # CSP
  Content-Security-Policy "default-src 'none'; script-src 'self'; connect-src 'self'; img-src 'self' data: www.gravatar.com; style-src 'self' 'unsafe-inline';  font-src 'self' data: ;"
  Feature-Policy "autoplay 'none'; camera 'none'; microphone 'none'; midi 'none'; usb 'none'; vr 'none';"
  Referrer-Policy "strict-origin"
}

cors /swagger http://localhost:3002

proxy / localhost:2015 {
  transparent
  websocket
}

proxy /auth keycloak:8080 {
  transparent
}

proxy /api api:8180 {
  without /api
  transparent
}

proxy /api/files havenapi:3000 {
  transparent
}

log / stdout "{combined}"
errors stdout
